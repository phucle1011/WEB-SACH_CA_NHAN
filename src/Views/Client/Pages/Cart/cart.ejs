        <script>
    document.addEventListener("DOMContentLoaded", function () {
        function updateCartTotal() {
            let totalCartPrice = 0;
            document.querySelectorAll(".quantity").forEach(input => {
                let price = Number(input.dataset.price);
                let quantity = Number(input.value);
                totalCartPrice += price * quantity;
            });

            document.getElementById("grand-total").textContent = totalCartPrice.toLocaleString("vi-VN") + "ƒë";
        }

        document.querySelectorAll(".quantity").forEach(input => {
            let productId = input.dataset.id;

            let savedQuantity = localStorage.getItem("cart-" + productId);
            if (savedQuantity) {
                input.value = savedQuantity;

                let price = Number(input.dataset.price);
                let totalPriceElement = document.getElementById("total-" + productId);
                totalPriceElement.textContent = (price * savedQuantity).toLocaleString("vi-VN") + "ƒë";
            }

            input.addEventListener("input", function () {
                let price = Number(this.dataset.price);
                let quantity = Number(this.value);

                if (quantity < 1) {
                    this.value = 1;
                    quantity = 1;
                }

                localStorage.setItem("cart-" + productId, quantity);

                let totalPriceElement = document.getElementById("total-" + productId);
                totalPriceElement.textContent = (price * quantity).toLocaleString("vi-VN") + "ƒë";

                updateCartTotal();

                let form = this.closest("form");
                let formData = new FormData(form);

                fetch(form.action, {
                    method: "POST",
                    body: formData
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log("C·∫≠p nh·∫≠t th√†nh c√¥ng", data);
                    })
                    .catch(error => console.error("L·ªói c·∫≠p nh·∫≠t:", error));
            });
        });

        updateCartTotal();
    });
</script>


