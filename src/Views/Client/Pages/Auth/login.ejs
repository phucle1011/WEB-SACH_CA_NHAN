<%- include("../../Layouts/header") %>

<div class="container mt-5">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <div class="card card-body shadow-sm border-0" style="margin-bottom: 50px; background-color: #f8f9fa;">
                <h4 class="text-center text-dark mb-4" style="margin-top: 20px">Đăng nhập</h4>

                <form action="/login" method="post">
                    <input type="hidden" name="method" value="POST">

                    <div class="form-group mb-3">
                        <label for="name" class="form-label text-dark">Tên đăng nhập</label>
                        <input type="text" name="name" id="name" class="form-control border-dark rounded-0 
                            <%= errors && errors.name ? 'is-invalid' : '' %>"
                            placeholder="Nhập tên đăng nhập" value="<%= name || '' %>">
                        <% if (errors && errors.name) { %>
                            <div class="invalid-feedback"><%= errors.name %></div>
                        <% } %>
                    </div>

                    <div class="form-group mb-3">
                        <label for="password" class="form-label text-dark">Mật khẩu</label>
                        <input type="password" name="password" id="password" class="form-control border-dark rounded-0 
                            <%= errors && errors.password ? 'is-invalid' : '' %>"
                            placeholder="Nhập mật khẩu">
                        <% if (errors && errors.password) { %>
                            <div class="invalid-feedback"><%= errors.password %></div>
                        <% } %>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input border-dark rounded-0" name="remember" id="remember" checked>
                        <label class="form-check-label text-dark" for="remember">Ghi nhớ đăng nhập</label>
                    </div>

                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button type="reset" class="btn btn-outline-dark rounded-0 px-4">Nhập lại</button>
                        <button type="submit" class="btn btn-dark rounded-0 px-4">Đăng nhập</button>
                    </div>

                    <div class="text-center mt-3">
                        <a href="/forgot-password" class="text-dark text-decoration-none" style="font-size: 0.8rem;">Quên mật khẩu?</a><br>
                        <a href="/register" class="text-dark text-decoration-none" style="font-size: 0.8rem;">Chưa có tài khoản? Đăng ký</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("../../Layouts/footer") %>
