<%- include("../../Layouts/header") %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="d-flex">
                <h4 class="page-title">QUẢN LÝ ĐƠN HÀNG</h4>
                <div class="ms-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Trang
                                    chủ</a></li>
                            <li class="breadcrumb-item active"
                                aria-current="page">Danh sách đơn hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách đơn hàng</h5>
                        <div class="table-responsive">
                            <form action="/admin/orders" method="GET"
                                class="mb-3">
                                <div class="input-group">
                                    <input type="text" name="keyword"
                                        class="form-control"
                                        placeholder="Tìm kiếm theo tên hoặc status..."
                                        value="<%= keyword || '' %>">
                                    <button type="submit"
                                        class="btn btn-primary">Tìm
                                        kiếm</button>
                                </div>
                            </form>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày đặt</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(function(order) { %>
                                    <tr>
                                        <td><%= order.id %></td>
                                        <td><%= order.customer_name %></td>
                                        <td><%= order.total_price %> VND</td>
                                        <td>
                                            <select
                                                class="form-control status-select"
                                                data-order-id="<%= order.id %>">
                                                <%
                                                let statuses = ["Chờ xác nhận",
                                                "Đã xác nhận", "Đang giao",
                                                "Hoàn thành", "Đã hủy"];
                                                if (order.status ===
                                                "Đã xác nhận") {
                                                statuses =
                                                ["Đã xác nhận","Đang giao",
                                                "Hoàn thành", "Đã hủy"];
                                                }
                                                if (order.status ===
                                                "Đang giao") {
                                                statuses = ["Đang giao",
                                                "Hoàn thành", "Đã hủy"];
                                                }
                                                if (order.status ===
                                                "Hoàn thành") {
                                                statuses = [ "Hoàn thành",
                                                "Đã hủy"];
                                                }
                                                if (order.status === "Đã hủy") {
                                                statuses = [ "Đã hủy"];
                                                }
                                                statuses.forEach(function(status)
                                                {
                                                %>
                                                <option value="<%= status %>"
                                                    <%=order.status === status ?
                                                    "selected" : "" %>><%=
                                                    status %></option>
                                                <% }); %>
                                            </select>
                                        </td>
                                        <td><%= order.created_at %></td>
                                        <td class="d-flex align-items-center">
                                            <a
                                                href="/admin/orders/detail/<%= order.id %>"
                                                class="btn btn-info me-2">Xem</a>
                                            <% if (order.status ===
                                            "Chờ xác nhận") { %>
                                            <button
                                                class="btn btn-danger cancel-order"
                                                data-order-id="<%= order.id %>">Hủy
                                                đơn</button>
                                            <% } else { %>
                                            <button class="btn btn-danger"
                                                disabled>Không thể hủy</button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="/admin/orders?page=<%= currentPage - 1 %>&keyword=<%= keyword %>">«
                                        Trước</a>
                                </li>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <li
                                    class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link"
                                        href="/admin/orders?page=<%= i %>&keyword=<%= keyword %>"><%=
                                        i %></a>
                                </li>
                                <% } %>

                                <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="/admin/orders?page=<%= currentPage + 1 %>&keyword=<%= keyword %>">Tiếp
                                        »</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll(".status-select").forEach(select => {
        select.addEventListener("change", function() {
            const orderId = this.dataset.orderId;
            const newStatus = this.value;

            fetch(`/admin/orders/update/${orderId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ status: newStatus })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert("Cập nhật trạng thái thành công!");

                    // Cập nhật danh sách trạng thái mà không cần load lại trang
                    const statusOptions = {
                        "Chờ xác nhận": ["Chờ xác nhận", "Đã xác nhận", "Đã hủy"],
                        "Đã xác nhận": ["Đã xác nhận", "Đang giao", "Hoàn thành", "Đã hủy"],
                        "Đang giao": ["Đang giao", "Hoàn thành", "Đã hủy"],
                        "Hoàn thành": ["Hoàn thành", "Đã hủy"],
                        "Đã hủy": ["Đã hủy"]
                    };

                    // Xóa tất cả các option cũ
                    select.innerHTML = "";

                    // Thêm các option mới dựa trên trạng thái hiện tại
                    statusOptions[newStatus].forEach(status => {
                        const option = document.createElement("option");
                        option.value = status;
                        option.textContent = status;
                        if (status === newStatus) {
                            option.selected = true;
                        }
                        select.appendChild(option);
                    });
                } else {
                    alert("Cập nhật thất bại!");
                }
            })
            .catch(error => console.error("Lỗi:", error));
        });
    });

    document.querySelectorAll(".cancel-order").forEach(button => {
        button.addEventListener("click", function() {
            const orderId = this.dataset.orderId;
            if (confirm("Bạn có chắc muốn hủy đơn hàng này không?")) {
                fetch(`/admin/orders/cancel/${orderId}`, { method: "POST" })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert("Đơn hàng đã bị hủy!");

                        // Cập nhật trạng thái của đơn hàng thành "Đã hủy"
                        const row = button.closest("tr");
                        if (row) {
                            const select = row.querySelector(".status-select");
                            select.innerHTML = `<option selected>Đã hủy</option>`;

                            // Vô hiệu hóa nút hủy
                            button.outerHTML = `<button class="btn btn-danger" disabled>Không thể hủy</button>`;
                        }
                    } else {
                        alert("Hủy đơn thất bại!");
                    }
                })
                .catch(error => console.error("Lỗi:", error));
            }
        });
    });
});

</script>

<%- include("../../Layouts/footer") %>
