<%- include("../../Layouts/header") %>

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách người dùng</h5>
                        <div class="table-responsive">
                            <form action="/admin/users" method="GET"
                                class="mb-3">
                                <div class="input-group">
                                    <input type="text" name="keyword"
                                        class="form-control"
                                        placeholder="Tìm kiếm theo tên hoặc email..."
                                        value="<%= keyword || '' %>">
                                    <button type="submit"
                                        class="btn btn-primary">Tìm
                                        kiếm</button>
                                </div>
                            </form>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Vai trò</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user) { %>
                                    <tr>
                                        <td><%= user.userId %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.phoneNumber %></td>
                                        <td><%= user.address %></td>
                                        <td><%= user.role %></td>
                                        <td class="d-flex align-items-center">
                                            <a
                                                href="/admin/users/detail/<%= user.userId %>"
                                                class="btn btn-info me-2">Xem</a>
                                            <a
                                                href="/admin/users/edit/<%= user.userId %>"
                                                class="btn btn-primary me-2">Sửa</a>
                                            <form
                                                action="/admin/users/delete/<%= user.userId %>"
                                                method="post"
                                                style="display: inline-block;"
                                                onsubmit="return confirm('Chắc chắn muốn xoá sản phẩm này?')">
                                                <button type="submit"
                                                    class="btn btn-danger">Xoá</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="/admin/users?page=<%= currentPage - 1 %>&keyword=<%= keyword %>">«
                                        Trước</a>
                                </li>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <li
                                    class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link"
                                        href="/admin/users?page=<%= i %>&keyword=<%= keyword %>"><%=
                                        i %></a>
                                </li>
                                <% } %>

                                <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="/admin/users?page=<%= currentPage + 1 %>&keyword=<%= keyword %>">Tiếp
                                        »</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../../Layouts/footer") %>
